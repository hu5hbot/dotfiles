;; bar
(set-fg-color "#cccccc")
(set-bg-color "#000000")
(set-msg-border-width 1)
(set-border-color "#cccccc")
(setf *normal-border-width* 2)
(setf *maxsize-border-width* 2)
(setf *window-border-style* :thin)
(setf *message-window-gravity* :top
	*input-window-gravity* :top)

;; keys
(define-key *root-map* (kbd "RET") "exec xterm")
(define-key *root-map* (kbd "f") "exec firefox")

;; modeline
(setf *group-format* " %t ")
(setf *window-format* "%m%n%s ")

(setf *time-modeline-string* "%d.%m.%Y@%H:%M")
(set-font "-*-lucidatypewriter-medium-r-normal-*-10-*-*-*-*-*-*-*")

(defun get-date-modeline ()
 (stumpwm:run-shell-command
  (format nil "date +\"~A\""
	*time-modeline-string*) t))

(stumpwm:run-shell-command "hsetroot -tile $HOME/tree.bmp")

(setf *screen-mode-line-format*
	(list "%g | %W ^> "
	'(:eval (get-date-modeline))
	))

(setf *mode-line-border-width* 2)
(setf *mode-line-background-color* "#000000")
(setf *mode-line-foreground-color* "#cccccc")

;; windows
(set-focus-color "#cccccc")
(set-unfocus-color "#000000")
