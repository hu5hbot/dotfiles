# !/bin/bash
# Xorg start script
# by hu5hbot
# @linux.org.ru

WM=/usr/bin/stumpwm

LANG=en_US.UTF-8
export LANG

/usr/bin/setxkbmap -option "ctrl:nocaps"
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

XSECURELOCK_AUTH_BACKGROUND_COLOR="#000000" XSECURELOCK_AUTH_FOREGROUND_COLOR="#aeaeae" XSECURELOCK_AUTH_WARNING_COLOR="#dc2626" XSECURELOCK_DATETIME_FORMAT="%d.%m.%Y@%H:%M" XSECURELOCK_FONT="-*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*" XSECURELOCK_PASSWORD_PROMPT="time" XSECURELOCK_SHOW_DATETIME="true" XSECURELOCK_SHOW_HOSTNAME="2"  XSECURELOCK_SHOW_USERNAME="true" xss-lock xsecurelock &

xbindkeys
xsetroot -cursor_name left_ptr
xmodmap $HOME/.Xmodmap

xrandr -s 640x480

$WM
